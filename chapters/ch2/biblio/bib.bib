  month = mar,
  year = {2005},
  pages = {283--302},
  file = {C:\\Users\\PC-Etu1-Phil\\Zotero\\storage\\9ZVH2FMI\\Llewellyn and Maurin - 2005 - Gas adsorption microcalorimetry and modelling to c.pdf;C:\\Users\\PC-Etu1-Phil\\Zotero\\storage\\C8ME7MKM\\Llewellyn,Maurin - 2005 - Gas adsorption microcalorimetry and modelling to characterise zeolites and related materials.pdf;C:\\Users\\PC-Etu1-Phil\\Zotero\\storage\\GHXLV7JP\\Llewellyn and Maurin - 2005 - Gas adsorption microcalorimetry and modelling to c.pdf}
